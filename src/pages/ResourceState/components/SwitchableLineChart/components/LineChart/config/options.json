{
  "tooltip": {
    "trigger": "axis",
    "confine": true,
    "showDelay": 40,
    "hideDelay": 100,
    "transitionDuration": 0.5,
    "padding": [15, 10],
    "backgroundColor": "rgba(34,144,204,0.2)",
    "borderColor": "#2290cc",
    "borderWidth": 2,
    "borderRadius": 4,
    "textStyle": {
      "color": "#fff"
    },
    "axisPointer": {
      "type": "line",
      "lineStyle": {
        "color": "#1b589d",
        "width": 2,
        "type": "solid"
      },
      "shadowStyle": {
        "width": "auto",
        "color": "rgba(150,150,150,0.3)"
      }
    }
  },
  "backgroundColor": "transparent",
  "color": ["#c687ef", "#ff9900", "#99cc00"],
  "legend": {
    "icon": "rect",
    "y": "3%",
    "right": "5%",
    "itemWidth": 10,
    "itemHeight": 12,
    "itemGap": 10,
    "data": ["CPU", "内存", "存储"],
    "textStyle": {
      "color": "#ffffff",
      "fontSize": 12
    }
  },
  "grid": {
    "x": "5.5%",
    "y": "18%",
    "x2": "7%",
    "y2": "6%",
    "borderWidth": 0,
    "containLabel": true
  },
  "calculable": false,
  "xAxis": [
    {
      "type": "category",
      "boundaryGap": false,
      "verticalAlign": "bottom",
      "nameTextStyle": {
        "color": "#ffffff",
        "fontSize": 12,
        "verticalAlign": "bottom"
      },
      "axisLine": {
        "lineStyle": {
          "color": "#666666",
          "type": "solid",
          "width": "1"
        }
      },
      "axisTick": {
        "show": false
      },
      "axisLabel": {
        "show": true,
        "textStyle": {
          "color": "#ffffff",
          "fontSize": 12
        },
        "align": "left",
        "padding": [0, 0, 0, 5],
        "showMaxLabel": false
      },
      "splitLine": {
        "lineStyle": {
          "color": "#666666",
          "type": "dashed"
        },
        "show": true
      }
    }
  ],
  "yAxis": [
    {
      "type": "value",
      "name": "使用率",
      "nameTextStyle": {
        "color": "#ffffff",
        "fontSize": 12
      },
      "axisLine": {
        "show": false,
        "lineStyle": {
          "color": "#666666",
          "type": "solid"
        }
      },
      "axisTick": {
        "show": false
      },
      "axisLabel": {
        "show": true,
        "textStyle": {
          "color": "#ffffff",
          "fontSize": 12
        },
        "formatter": "{value}%"
      },
      "splitLine": {
        "lineStyle": {
          "color": "#666666",
          "type": "solid"
        },
        "show": true
      }
    }
  ],
  "series": [
    {
      "name": "CPU",
      "type": "line",
      "symbol": "none",
      "symbolSize": 0,
      "smooth": 0.4,
      "itemStyle": {
        "normal": {
          "lineStyle": {
            "width": 1,
            "color": "#c687ef"
          },
          "label": {
            "show": true,
            "position": "top",
            "formatter": "{b}\n{c}%"
          }
        }
      }
    },
    {
      "name": "内存",
      "type": "line",
      "symbol": "none",
      "symbolSize": 0,
      "smooth": 0.4,
      "itemStyle": {
        "normal": {
          "lineStyle": {
            "width": 1,
            "color": "#ff9900"
          },
          "label": {
            "show": true,
            "position": "top",
            "formatter": "{b}\n{c}%"
          }
        }
      }
    },
    {
      "name": "存储",
      "type": "line",
      "symbol": "none",
      "symbolSize": 0,
      "smooth": 0.4,
      "itemStyle": {
        "normal": {
          "lineStyle": {
            "width": 1,
            "color": "#99cc00"
          },
          "label": {
            "show": true,
            "position": "top",
            "formatter": "{b}\n{c}%"
          }
        }
      }
    }
  ]
}
